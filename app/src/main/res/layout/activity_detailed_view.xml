<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="app.flashcards.DetailedViewActivity">

    <TextView
        android:id="@+id/detailedNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="20dp"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/detailedCharacterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_marginTop="52dp"
        android:layout_below="@+id/detailedNumberTextView"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/detailedDefinitionsTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="5dp"
        android:textSize="20sp"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/detailedCharacterTextView" />

</RelativeLayout>
